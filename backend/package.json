{
  "name": "sumbitheses-backend",
  "version": "1.0.0",
  "description": "Backend API for Sumbi Theses",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "npx tsx src/server.ts",
    "clean": "rm -rf dist",
